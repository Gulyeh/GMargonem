<Window x:Class="MiningCheck.CoinQuestion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiningCheck"
        mc:Ignorable="d"
        Title="Duplication found" Height="253.125" Width="405.028"
        ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <TextBlock Text="Detected same wallet address on ETC and ETH" TextAlignment="Center" Margin="0,30,0,0" FontSize="15"/>
            <TextBlock Text="Which coin do you want to check?" TextAlignment="Center" Margin="0,10,0,0"/>
            <ComboBox Name="SelectCoin" Margin="0,40,0,0" Width="150" Height="30">
                <ComboBoxItem>ETH</ComboBoxItem>
                <ComboBoxItem>ETC</ComboBoxItem>
            </ComboBox>
            <Button Width="100" Height="30" Content="OK" Margin="0,30,0,0" Click="ExitWindow"/>
        </StackPanel>
    </Grid>
</Window>
